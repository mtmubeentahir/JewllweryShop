<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :price_per_unit %>
    <%= form.text_field :price_per_unit %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select(:category_id, Category.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
